{
  "name": "gltf-viewer",
  "productName": "glTF Viewer",
  "description": "glTF 2.0 file viewer",
  "version": "1.1.0",
  "main": "main.js",
  "devDependencies": {
    "electron": "^1.8.1",
    "electron-packager": "^10.1.0"
  },
  "scripts": {
    "package-win": "electron-packager . --overwrite --platform=win32 --arch=x64 --electron-version=1.8.1 --asar  --icon=icons/gltf-viewer.ico",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --electron-version=1.8.1 --asar  --icon=icons/gltf-viewer.icns"
  }
}